                    <option value="<%=staffs[i].userid%>"><%=staffs[i].username%></option>
                    <%}%>
                </select>
                <button class="btn btn-success btn-lg w-100" name="biometricNow" type="submit">Keep BioMetric Now</button>
                </form>
